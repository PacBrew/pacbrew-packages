# Maintainer: cpasjuste <cpasjuste@gmail.com>

pkgname=ps4-linker
pkgver=1.0.0
pkgrel=1
pkgdesc='linker stuff for ps4'
arch=('any')
url='https://github.com/PacBrew'
license=('GNU GPL')
options=(!strip libtool)
source=("crt0.c" "linker.x")
sha256sums=(
  '13af72e54de0be70868924d6055b60ffa6c14990941964126099d73e76c0a5da'
  '9c73c5656c7819f29f7c3f2114ebb2fec4e1e30338a20609a2e9aa409b0c90c7'
)
depends=('ps4-clang')
groups=('ps4-toolchain')

build() {
  
  /opt/pacbrew/ps4/toolchain/bin/clang --target=x86_64-scei-ps4 -O3 \
    -I/opt/pacbrew/ps4/toolchain/usr/include \
    -I/opt/pacbrew/ps4/toolchain/usr/include/c++/v1 \
    -c -o crt0.o  crt0.c
}

package() {
  install -d "$pkgdir"/opt/pacbrew/ps4/toolchain/usr/lib 
  install -Dm644 crt0.o "$pkgdir"/opt/pacbrew/ps4/toolchain/usr/lib
  install -Dm644 linker.x "$pkgdir"/opt/pacbrew/ps4/toolchain/usr/lib
}
