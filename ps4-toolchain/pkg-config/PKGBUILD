# Maintainer: cpasjuste <cpasjuste@gmail.com>

pkgname=ps4-pkg-config
pkgver=1.0.0
pkgrel=1
pkgdesc='pkg-config wrapper for ps4'
arch=('any')
url='https://github.com/PacBrew'
source=('pkg-config.in')
sha256sums=('dc1db3604e88fcb0611663f324efdef12a754528bb5873c6ac285337be9efd7d')
depends=('ps4-clang')
groups=('ps4-toolchain')

package() {
  install -d "$pkgdir/opt/pacbrew/ps4/toolchain/usr/bin"
  cp "$srcdir"/pkg-config.in "$pkgdir/opt/pacbrew/ps4/toolchain/usr/bin/orbis-pkg-config"
}
