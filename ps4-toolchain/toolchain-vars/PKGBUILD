# Maintainer: cpasjuste <cpasjuste@gmail.com>

pkgname=ps4-toolchain-vars
pkgver=1.0.0
pkgrel=1
pkgdesc='helper scripts to set variables for ps4 toolchain'
arch=('any')
url='https://github.com/PacBrew'
source=('ps4vars.sh' 'ps4libvars.sh' 'ps4sdk.mk' 'ps4sdklib.mk' 'ps4_elf_sce.mk' 'ps4_lib.mk')
options=(!strip)
groups=('ps4-toolchain')

sha256sums=(
  '1d39d8c82a49b13e07dd7d8071fd390046d06749564d3e4eb7bde1e56ed73cd8' # ps4vars.sh
  '7884febc7e2568256cdb9c83165d6c31dd037108d4da9d9030f0191e2137d37f' # ps4libvars.sh
  'bbe5e29b512c3b4a05f6877c234265f07f7a76f67956e9fce426a64ab8498e64' # ps4sdk.mk
  '0b65b74223cc300dc60d5c20bc81a4cf2b8682932f90b9cb4abaf9520ba8d704' # ps4sdklib.mk
  '55f4359c821eea63a147b10bb0b34575b9f9067689dd1c243ada7998af1266a2' # ps4_elf_sce.mk
  'b0599aff45e9a7b5dba7d9923d10b9fd9c9691aa97d225ee549ee4cc71ef4bfb' # ps4_lib.mk
)

package() {
  install -d "$pkgdir"/opt/pacbrew/ps4/toolchain/make/target
  install -Dm644 ps4vars.sh "$pkgdir"/opt/pacbrew/ps4/toolchain
  install -Dm644 ps4libvars.sh "$pkgdir"/opt/pacbrew/ps4/toolchain
  install -Dm644 ps4sdk.mk "$pkgdir"/opt/pacbrew/ps4/toolchain/make
  install -Dm644 ps4sdklib.mk "$pkgdir"/opt/pacbrew/ps4/toolchain/make
  install -Dm644 ps4_elf_sce.mk "$pkgdir"/opt/pacbrew/ps4/toolchain/make/target
  install -Dm644 ps4_lib.mk "$pkgdir"/opt/pacbrew/ps4/toolchain/make/target
}
